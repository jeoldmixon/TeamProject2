<div class="container p-3 mb-2 bg-dark">
    <section id="content" class="login-form">
        {{!-- Login form --}}
        <form class="signup-form align-items-center card p-3 bg-dark text-white">
            <h1>Login Form</h1>
            <div>
                <input class="m-3" type="text" placeholder="Username" id="username-login" />
            </div>
            <div>
                <input class="m-3" type="password" placeholder="Password" id="password-login" />
            </div>
            <div class="d-flex justify-content-around">
                <button class="btn bg-primary col-5 text-white" type="submit">
                    Log-in
                </button>
                <a href="/signup" class="btn bg-success col-5 text-white">
                    Need an account? Click here to signup
                </a>
            </div>
        </form>
    </section>
</div>

<script src="/javascript/login.js"></script>
<article class="post card">
    <div class="card">
        <div class="card-header">
            <h3><a class="text-white" href="{{url}}" target="_blank">{{title}}</a></h3>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>{{company_name}}</p>
                <p>{{location}}</p>
            </blockquote>
        </div>
    </div>
</article>